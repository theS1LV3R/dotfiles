#!/usr/bin/env bash
# vi: ft=sh:ts=2:sw=2

# shellcheck source=executable___common.sh
source "$HOME/.local/bin/__common.sh"

CITY="${1:-'bergen'}"

# Options:
#  - m = Metric (SI) units
#  - M = Wind speed in m/s
#  - 0 = Only current weather
#  - F = Do not show "Follow" line

url="https://v2.wttr.in/$CITY?mM0F&lang=en"

echo "Opening $url"

page=$(curl -s "$url")

pager "$page"
